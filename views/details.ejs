<!DOCTYPE html>
<head>
  <% include ./partials/head %>

</head>

<body class="centered-wrapper">
  <div class="centered-content">
    <header>
      <% include ./partials/header %>
    </header>
    <h1>Details</h1>

    <% contacts.forEach(function(contact){ %>
      <div>
<table>
  <tbody>
    <tr>
      <td>Name:</td>
      <td>
        <%= contact.name %>
      </td>
    </tr>
    <tr>
      <td>Email:</td>
      <td><a href='mailto:/<%= contact.email %>'>
        <%= contact.email %>
      </a></td>
    </tr>
    <tr>
      <td>Phone:</td>
      <td><%= contact.phone %></td>
    </tr>
    <tr>
      <td>Address:</td>
      <td><%= contact.street %></td>
    </tr>
    <tr>
      <td></td>
      <td><%= contact.city %>, <%= contact.state %> <%= contact.zip %></td>
    </tr>
    <tr>
      <td>Country:</td>
      <td><%= contact.country %></td>
    </tr>
    <tr>
      <td>Birthday:</td>
      <td><%= contact.the_month %>/<%= contact.the_day %>/<%= contact.the_year %></td>
    </tr>
    <tr>
      <td>Website:</td>
      <td><a href='<%= contact.website %>'><%= contact.website %></a></td>
    </tr>
  </tbody>
</table>
<% }) %>
      </div>

</body>

</html>
